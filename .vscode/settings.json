{
  // Code Runner Settings
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "python": "$pythonPath -u $fullFileName"
  },
  "code-runner.runInTerminal": true,
  // Editor Settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // Python-specific Editor Settings
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // TOML-specific Editor Settings
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  // General Settings
  "extensions.ignoreRecommendations": true,
  // Explorer Settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Git Settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true
  },
  // JSON Schema Settings
  "json.schemas": [
    {
      "fileMatch": ["*.json", "*.jsonc"],
      "url": "https://json.schemastore.org/package"
    }
  ],
  // Material Icon Theme Settings
  "material-icon-theme.files.color": "#ef5350",
  "material-icon-theme.files.associations": {
    "py.typed": "python"
  },
  "material-icon-theme.folders.color": "#ef5350",
  "material-icon-theme.folders.associations": {
    "AutoFrameCAD": "src"
  },
  // Python Analysis Settings
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportWildcardImportFromLibrary": "none"
  },
  "python.analysis.importFormat": "relative",
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.typeCheckingMode": "strict",
  // Python Environment Settings
  "python.createEnvironment.trigger": "off",
  // Python Language Server Settings
  "python.languageServer": "Pylance",
  // Python Testing Settings
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "--rootdir=.",
    "--verbose",
    "AutoFrameCAD/tests"
  ],
  // Terminal Settings
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // Todo Tree Settings
  "todo-tree.general.tags": ["ERROR", "BUG", "FIXME", "TODO", "NOTE"],
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true,
    "fontWeight": "bold",
    "borderRadius": "0.2em"
  },
  "todo-tree.highlights.customHighlight": {
    "ERROR": {
      "icon": "alert",
      "iconColour": "#ff0000",
      "foreground": "#ffffff",
      "background": "#ff0000"
    },
    "BUG": {
      "icon": "bug",
      "iconColour": "#ffa500",
      "foreground": "#000000",
      "background": "#ffa500"
    },
    "FIXME": {
      "icon": "flame",
      "iconColour": "#0000ff",
      "foreground": "#ffffff",
      "background": "#0000ff"
    },
    "TODO": {
      "icon": "check",
      "iconColour": "#008000",
      "foreground": "#ffffff",
      "background": "#008000"
    },
    "NOTE": {
      "icon": "note",
      "iconColour": "#ffff00",
      "foreground": "#000000",
      "background": "#ffff00"
    }
  },
  // Workbench Settings
  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "svg.preview.background": "dark-transparent"
}
