{
	"image": "python:3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"username": "vscode@STEN",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": "true"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": "false"
		}
	},
	"customizations": {
		"settings": {
			"python.defaultInterpreterPath": "/usr/local/bin/python",
			"terminal.integrated.shellArgs.linux": [
				"-c",
				"source .venv/bin/activate && exec /bin/bash"
			]
		},
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff",
				"formulahendry.code-runner",
				"usernamehw.errorlens",
				"visualstudioexptteam.vscodeintellicode",
				"visualstudioexptteam.intellicode-api-usage-examples",
				"pkief.material-icon-theme",
				"gruntfuggly.todo-tree",
				"github.copilot",
				"github.vscode-github-actions",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools"
			]
		}
	},
	"postCreateCommand": "python -m venv .venv && /bin/bash -c \"source .venv/bin/activate && pip install -r requirements.txt && pip install --upgrade pip\"",
	"remoteUser": "vscode@STEN"
}